
@{
    ViewBag.Title = "MainDisplay";
}



<body background="~/export-map-share.png" style="background-size:100% 100%; background-attachment:fixed">
</body>
<canvas id="myCanvas"
        style="border:1px;"></canvas>
<script>
    var lon = @ViewBag.lon;
    var lat = @ViewBag.lat;
    var canvas = document.getElementById("myCanvas");


    canvas.height = window.innerHeight;
    canvas.width = window.innerWidth;
    function setLon(lon) {
        if (lon < 0)
            return (lon + 180) * (canvas.width / 360);
    }

    function setLat(lat) {
        return (lat + 90) * (canvas.height / 180);
    }

    function drawLocation() {
        var ctx = canvas.getContext("2d");
        ctx.beginPath();
        ctx.fillStyle = "red";
        ctx.arc(lon, lat, 10, 0, 2 * Math.PI);
        ctx.stroke();
        ctx.fill();
    }
    setLon();
    setLat();
    drawLocation();
</script>